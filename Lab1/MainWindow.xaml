<Window x:Class="CafeOrderApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Заказ в кафе" MinHeight="630" MinWidth="907" Height="400" Width="600">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <!-- Первая колонка фиксированной ширины -->
            <ColumnDefinition Width="250"/> <!-- Левый блок с формами -->
            <!-- Вторая колонка будет растягиваться -->
            <ColumnDefinition Width="*"/> <!-- Список заказов -->
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="10">
            <!-- Имя клиента -->
            <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="10" Margin="0,0,0,10">
                <StackPanel>
                    <Label Content="Имя клиента:" Margin="0,0,0,5"/>
                    <TextBox x:Name="NameTextBox" Height="32"/>
                </StackPanel>
            </Border>

            <!-- Выбор блюда -->
            <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="10" Margin="0,0,0,10">
                <StackPanel>
                    <Label Content="Выберите основное блюдо:" Margin="0,0,0,5"/>
                    <ComboBox x:Name="DishComboBox" Height="25">
                        <ComboBox.Items>
                            <sys:String xmlns:sys="clr-namespace:System;assembly=mscorlib">Пицца</sys:String>
                            <sys:String xmlns:sys="clr-namespace:System;assembly=mscorlib">Паста</sys:String>
                            <sys:String xmlns:sys="clr-namespace:System;assembly=mscorlib">Бургер</sys:String>
                            <sys:String xmlns:sys="clr-namespace:System;assembly=mscorlib">Салат</sys:String>
                        </ComboBox.Items>
                    </ComboBox>
                </StackPanel>
            </Border>

            <!-- Дополнительные ингредиенты -->
            <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="10" Margin="0,0,0,10">
                <StackPanel>
                    <Label Content="Дополнительные ингредиенты:" Margin="0,0,0,5"/>
                    <CheckBox x:Name="CheeseCheckBox" Content="Сыр" Foreground="#6e4d2c"/>
                    <CheckBox x:Name="SauceCheckBox" Content="Соус" Foreground="#6e4d2c"/>
                    <CheckBox x:Name="PepperCheckBox" Content="Перец" Foreground="#6e4d2c"/>
                </StackPanel>
            </Border>

            <!-- Способ получения -->
            <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="10" Margin="0,0,0,10">
                <StackPanel>
                    <Label Content="Способ получения заказа:" Margin="0,0,0,5"/>
                    <RadioButton x:Name="TakeawayRadioButton" Content="Взять с собой" GroupName="DeliveryMethod" Foreground="#6e4d2c"/>
                    <RadioButton x:Name="DeliveryRadioButton" IsChecked="True" Content="Доставка" GroupName="DeliveryMethod" Foreground="#6e4d2c"/>
                </StackPanel>
            </Border>

            <!-- Кнопка оформления -->
            <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="10">
                <Button Content="Оформить заказ" Width="150" HorizontalAlignment="Center" 
                        Click="PlaceOrderButton_Click"/>
            </Border>
            <Label x:Name="StatusLabel" Margin="5,10,0,0" Foreground="Red" HorizontalAlignment="Left" Visibility="Collapsed"/>
        </StackPanel>

        <!-- Список заказов -->
        <Border Grid.Column="1" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="10" Margin="10,0,0,0">
            <StackPanel>
        <Label Content="Список заказов:" Margin="0,0,0,10" FontWeight="Bold"/>
        <ListBox x:Name="OrdersListBox" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Visibility="Collapsed"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>